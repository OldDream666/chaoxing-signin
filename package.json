{
  "name": "chaoxing-sign",
  "version": "4.3.5",
  "description": "超星学习通签到项目",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev:serve dev --filter=./apps/*",
    "build": "turbo run build",
    "start": "node ./apps/server/build/index.js",
    "serve": "node ./apps/server/build/serve.js",
    "monitor": "node ./apps/server/build/monitor.js",
    "lint": "turbo run lint"
  },
  "repository": "https://github.com/olddream666/chaoxing-sign-cli.git",
  "author": "mcx",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.9",
  "devDependencies": {
    "turbo": "^2.5.3"
  }
}
