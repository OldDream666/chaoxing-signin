{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "serve": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "dev:serve": {
      "cache": false
    },
    "lint": {}
  }
}